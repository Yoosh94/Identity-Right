@model AddAddressViewModel

<div class="row">
    <div class="col-md-12">
        <h4>Postal Address:</h4>
        <form>
            <input size="300" /><input placeholder="Postcode" />
            <select>
                <option value="">Select organisation</option>
                <option value="">All</option>
                <option value="">Organisation a</option>
                <option value="">Organisation b</option>
                <option value="">Organisation c</option>
                <option value="">Organisation e</option>
                <option value="">Organisation f</option>
                <option value="">Organisation g</option>
            </select><span> or </span>
            <input placeholder="Search organisation/company" size="150" />
            <button>Update Now</button>
            <button id="btn">Cancel update</button>
        </form>

        <small style="float:right;display:block;"> Status: <span style="color:lightgrey;">Cancelled</span></small>
        <hr />
    </div>

    
    <div>
        <form asp-controller="Identity" asp-action="addAddress">
            <div class="form-horizontal">
                <h4>Add Address to your account</h4>
                <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="addressType" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="addressType" asp-items="Html.GetEnumSelectList<AddressType>()" class="form-control"></select>
                        <span asp-validation-for="addressType" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Address</label>
                    <div class="col-md-10">
                        <input id="address" class="form-control">
                    </div>
                </div>
                @*Start and End Date will be added in later versions*@


                @*<div class="form-group">
                    <label asp-for="startDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="startDate" class="form-control" />
                        <span asp-validation-for="startDate" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="endDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="endDate" class="form-control" />
                        <span asp-validation-for="endDate" class="text-danger" />
                    </div>
                </div>*@
                <div class="form-group">
                    <label asp-for="subpremise" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="subpremise" class="form-control" disabled="disabled" />
                        <span asp-validation-for="subpremise" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="street_number" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="street_number" class="form-control" disabled="disabled" />
                        <span asp-validation-for="street_number" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="route" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="route" class="form-control" disabled="disabled" />
                        <span asp-validation-for="route" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="locality" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="locality" class="form-control" disabled="disabled" />
                        <span asp-validation-for="locality" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="postal_code" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="postal_code" class="form-control" disabled="disabled" />
                        <span asp-validation-for="postal_code" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="administrative_area_level_1" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="administrative_area_level_1" class="form-control" disabled="disabled" />
                        <span asp-validation-for="administrative_area_level_1" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="country" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="country" class="form-control" disabled="disabled" />
                        <span asp-validation-for="country" class="text-danger" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBvN49EG4_gYq0AiYPl0B5-ZfXcg40qb6U&libraries=places" asp-append-version="true"></script>
