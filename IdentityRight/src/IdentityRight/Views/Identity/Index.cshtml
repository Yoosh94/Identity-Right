                            </a>
                            <h5>Manage Joint Account</h5>
                        </div>
                    </div>*@
            </div>
        </div>
    }
    else
    {
        <label class="text-danger">To ensure the security of your information and to enable access to update your account please enable two factor authentication above.</label>

    }
</div>
<script>
    $(document).ready(function () {
        $("[rel='tooltip']").tooltip();

        $('.thumbnail').hover(
            function () {
                $(this).find('.caption').slideDown(400); //.fadeIn(250)
            },
            function () {
                $(this).find('.caption').slideUp(400); //.fadeOut(205)
            }
        );
    });
</script>




