@model AddEmailViewModel
@{
    ViewData["Title"] = "Manage your emails";
}

<h2>@ViewData["Title"].</h2>
<div>
    <div>
        @*Create new partial view which will display all the addresses rendered to the user*@
        @await Component.InvokeAsync("DisplayRegisteredEmailAddress", User)
    </div>
</div>

<div class="row">
    <div>
        <form asp-controller="Identity" asp-action="addEmail" method="post">
            <div class="form-horizontal">
                <h4>Add a new address</h4>
                <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="emailTypes" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="emailTypes" asp-items="Html.GetEnumSelectList<EmailTypes>()" class="form-control"></select>
                        <span asp-validation-for="emailTypes" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="email" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="email" class="form-control"/>
                        <span asp-validation-for="email" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add" class="btn btn-default" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>