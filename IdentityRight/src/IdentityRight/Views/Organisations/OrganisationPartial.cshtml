@model IdentityRight.ViewModels.Organisations.OrganisationDetailsViewModel

<h2>Organisation Name: @Model.OrganisationName</h2>
<p>Organisation Address: @Model.OrganisationAddress</p>

<hr/>

@{
    if (Model.LinkedUsers.Count > 0)
    {
        if (Model.LinkedUsers.Count > 1)
        {
            <h2>@Model.LinkedUsers.Count users registered with @Model.OrganisationName</h2>
        }
        else
        {
            <h2>@Model.LinkedUsers.Count user registered with @Model.OrganisationName</h2>
        }
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Customer Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model.LinkedUsers)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.IRID</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No users linked to this organisation</p>
    }
}